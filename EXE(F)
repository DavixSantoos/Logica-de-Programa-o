programa
{
    funcao inicio()
    {
        real nota1, nota2, media

        
        faca {
            escreva("Digite a primeira nota (0 a 10): ")
            leia(nota1)
        } enquanto (nota1 < 0 ou nota1 > 10)

        
        faca {
            escreva("Digite a segunda nota (0 a 10): ")
            leia(nota2)
        } enquanto (nota2 < 0 ou nota2 > 10)

        
        media = (nota1 + nota2) / 2

        escreva("A média do aluno é: ", media, "\n")
    }
}
